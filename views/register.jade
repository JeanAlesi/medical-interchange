extends layout

block content
  .container
    h3 Register Page
    p Enter a username and a password.
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      .form-group
        select(id="role", name="role")
          for role in roles
            option(value=role) #{role}
      .form-group
        input.form-control(type='text', name="firstname", placeholder='Enter First Name')
      .form-group
        input.form-control(type='text', name="lastname", placeholder='Enter Last Name')
      .form-group
        input.form-control(type='text', name="email", placeholder='Enter Email')
      .form-group
        input.form-control(type='text', name="phonenumber", placeholder='Enter Phone Number')
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-warning(type="button") Cancel
