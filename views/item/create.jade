extends ../layout
include ../mixins/form-helpers

block content

  form#item-form(action="/items/create", method="POST")
    fieldset
      legend Create a new Item

      .form-group
        mixin label("title", "Title")
        mixin text("title", item.title)
        mixin errorMessage(item, 'title')
      .form-group
        mixin label("description", "Description")
        mixin text("description", item.description)
        mixin errorMessage(item, 'description')
      .form-group
        mixin label("category", "Category")
        mixin text("category", item.category)
        mixin errorMessage(item, 'category')
      .form-group
        mixin label("location", "Location")
        a(href="/locations/", target="_blank", title="Info")
          i.glyphicon.glyphicon-info-sign
        mixin text("location", item.location)
        mixin errorMessage(item, 'location')
      .form-group
        mixin label("condition", "Condition")
        a(href="/conditions/", target="_blank", title="Conditions")
          i.glyphicon.glyphicon-info-sign
        br
        select(id="condition", name="condition")
          for conditionOption in itemConditions
            option(value=conditionOption, selected=item.condition == conditionOption) #{conditionOption}

        mixin errorMessage(item, 'condition')

    .form-actions
      a.btn.btn-warning(href="/items") Back
      |
      input.btn.btn-primary(type="submit", value="Next")
