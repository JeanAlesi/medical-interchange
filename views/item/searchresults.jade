extends ../layout

include ../mixins/form-helpers
block content
   form#search-form(action="/items/search", method="POST")
      h1.display-data Search
         a(href="/items/index", title="Search")&nbsp;
         i.glyphicon.glyphicon-search
      .form-groupit
         mixin label("search", "Enter full or partial description, title or category of the items you are looking for..")
         mixin text("title", title)
         br
      .form-actions
         input.btn.btn-primary(type="submit", value="Search")

   h2.display-data Search Results
   table.table.table-bordered.table-striped
      tr
         th
         th Title
         th Description
         th Category
         th Condition
            a(href="/conditions/", title="Conditions")
               i.glyphicon.glyphicon-info-sign
         th
      each item in items
         tr
            td: img(src='/images/' + item._id width="100" height="50" onerror="this.onerror=null;this.src='/images/slug.png';this.width=50;this.height=50;")
            td= display(item.title)
            td= display(item.description)
            td= display(item.category)
            td= display(item.condition)
            td
               a(href="/items/" + item._id + "/detail", title="Detail")
                  i.glyphicon.glyphicon-search
               |
               a(href="/items/" + item._id + "/edit", title="Edit")
                  i.glyphicon.glyphicon-pencil
               |
               a(href="/items/" + item._id + "/delete", title="Delete")
                  i.glyphicon.glyphicon-ban-circle
